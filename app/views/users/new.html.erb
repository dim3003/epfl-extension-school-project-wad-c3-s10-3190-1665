
  <div class='row'>
    <div class='col-sm-3'></div>
    <div class='col-sm-6'>
      <h1 class='mb-sm-5 mb-5'>Sign up / Log in</h1>
      <%= form_for(@usernew) do |form| %>
      <div class='form-group row'>
        <%= form.label(:email, 'Email address', class: 'col-sm-2 m-sm-0 py-sm-2') %>
        <div class='col-sm-10'>
          <%= form.text_field(:email, class: 'form-control', placeholder: 'e.g. me@epfl.ch') %>
        </div>
      </div>
      <div class="form-group">
        <%= form.submit('Log in', class: 'btn btn-primary form-control') %>
      </div>
      <% end %>
    </div>
  <div class='col-sm-3'></div>
  </div>
