<% if(@pin.errors.any?) %>
  <div class="alert alert--wide">
    <%= @pin.errors.full_messages.join('<br />') %>
  </div>
<% end %>
<div class='row'>
  <div class='col-sm-3'></div>
  <div class='col-sm-6'>
    <h1 class='mb-sm-5 mb-5'><%= form_header %> Pin</h1>
    <%= form_for(pin) do |form| %>
    <div class='form-group row'>
      <%= form.label(:title, 'Title', class: 'col-sm-2 m-sm-0 py-sm-2') %>
      <div class='col-sm-10'>
        <%= form.text_field(:title, class: 'form-control', placeholder: 'Pin title') %>
      </div>
    </div>
    <div class='form-group row'>
      <%= form.label(:image_url, 'Image url', class: 'col-sm-2 m-sm-0 py-sm-2') %>
      <div class='col-sm-10'>
        <%= form.text_field(:image_url, class: 'form-control') %>
      </div>
    </div>
    <div class='form-group row'>
      <%= form.label(:tag, 'Tag', class: 'col-sm-2 m-sm-0 py-sm-2') %>
      <div class='col-sm-10'>
        <%= form.text_field(:tag, class: 'form-control') %>
      </div>
    </div>
    <div class="form-group">
      <%= form.submit(class: 'btn btn-primary form-control') %>
    </div>
    <% end %>
  </div>
<div class='col-sm-3'></div>
</div>
