<div class="container">
  <div class='row'>
    <div class='col-sm-3'></div>
    <div class='col-sm-6'>
      <h1 class='mb-sm-5 mb-5'><%= @pin.title %></h1>
      <%= render(partial: 'pin_pic', locals: {image_url: @pin.image_url}) %>
      <div class='py-5 row'>
        <dt class="col-sm-2">Tag:
        </dt>
        <dd><%= @pin.tag %></dd>
      </div>
    </div>
    <div class='col-sm-3'></div>
  </div>
  <div>
    <h4>Discussion</h4>
    <ul class='row'>

      <%= form_for([@pin, @comment]) do |form| %>
          <%= image_tag('avatar', alt: 'Default avatar', class: 'avatar') %>
          <div class='form-group row'>
            <%= form.label(:body, 'Add a comment', class: 'col-sm-2 m-sm-0 py-sm-2') %>
            <%= form.text_area(:body, class: 'form-control') %>
          </div>
          <%= form.submit('Post', class: 'btn btn-primary form-control') %>
      <% end %>

      <% @pin.comments.each do |comment| %>
        <li>
          <div class='col-sm-3'>
            <%= image_tag('avatar', alt: 'Default avatar', class: 'avatar') %>
          </div>
          <div class='col-sm-5'>
            <h3>Anonymous</h3>
            <p><%= comment.body %></p>
          </div>
        </li>
      <% end %>
    </ul>
</div>
